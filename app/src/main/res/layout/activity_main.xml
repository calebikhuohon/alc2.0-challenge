<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bitcoin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bitcoin_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@mipmap/bitcoin"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_below="@id/bitcoin_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitcoin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ethereum"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ethereum_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_ethereum"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_below="@id/ethereum_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ethereum"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>