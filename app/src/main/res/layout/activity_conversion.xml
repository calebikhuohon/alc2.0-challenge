<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.caleb.cryptocurrencyconverter.ConversionActivity">

    <TextView
        android:id="@+id/textView_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="btc"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/bitcoinValue"
        android:layout_below="@id/textView_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="20"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_currency"
        android:layout_below="@id/bitcoinValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="TextView" />

    <EditText
        android:id="@+id/editText_currency"
        android:layout_below="@id/textView_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_centerInParent="true"
        tools:text="20"/>


</RelativeLayout>
